<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="189dp">
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:background="@color/colorAccent"
            app:canLoop="true"
            app:layout_collapseMode="parallax"/>
        <com.ap88.yg.fruittole.ui.widget.ArcView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:clickable="false"/>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f4f4f4"/>

    <!--果乐消息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_news_mq"/>
        <com.ap88.yg.fruittole.ui.widget.MarqueeView
            android:id="@+id/marquee_view"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="1dp"
            app:isSetAlphaAnim="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#f8f8f8"/>

    <!--签到-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/img_sign"/>

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/drawable_btn_sign"
            android:text="马上签到"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/btn_sign"
            android:text="每日签到"
            android:textColor="#ff4535"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/btn_sign"
            android:text="天天签到，天天领积分"
            android:textColor="#646464"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#f8f8f8"/>

    <RelativeLayout
        android:id="@+id/rl_guess"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <View
            android:id="@+id/view_icon"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="#ff4535"/>
        <TextView
            android:id="@+id/tv_guess_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/view_icon"
            android:text="果价猜猜猜（下周）"
            android:textColor="#323232"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_hint_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="人正在参与"
            android:textColor="#969696"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_guess_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/tv_hint_count"
            android:text="5222"
            android:textColor="#323232"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f4f4f4"/>

    <com.ap88.yg.fruittole.ui.widget.MyProgressView
        android:id="@+id/guessView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>

    <!--横行列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_expert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPageBg"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <View
            android:id="@+id/view_icon_list"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="#ff4535"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/view_icon_list"
            android:text="供求信息"
            android:textColor="#323232"
            android:textSize="16sp"/>
    </RelativeLayout>

</LinearLayout>