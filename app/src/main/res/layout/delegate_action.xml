<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0ffffff"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:scaleType="center"
        android:src="@drawable/btn_close_action"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_close"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_req_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/img_btn_public_req_buy"
            android:gravity="center"
            android:text="发布求购"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/tv_supply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/img_btn_public_supply"
            android:gravity="center"
            android:text="发布供应"
            android:textColor="#343434"/>
    </LinearLayout>

</RelativeLayout>